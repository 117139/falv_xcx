/* pages/zxjs/zxjs.wxss */
.container{
  padding-top:30rpx;
  padding-bottom: 150rpx;
  box-sizing: border-box;
}
.zx_t_img{
  width: 100%;
  height: 518rpx;
  text-align: center;
  margin-bottom: 52rpx;
}
.zx_t_img image{
  width:400rpx;
height:518rpx;
}
.zx_name{
  font-size: 34rpx;
  color: #222;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.zx_msg{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #666;
}
.footer_f{
  position: fixed;
  bottom: 0;
  left:0;
	right: 0;
	display: flex;
	justify-content: space-between;
	
}
.footer_f>view{
	flex: 1;
	height: 100rpx;
	background: #F6F6F6;
	color:#D13838;
	font-size: 34rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.footer_f>.zx_btn{
	background: #D13838;
	color: #fff;
}