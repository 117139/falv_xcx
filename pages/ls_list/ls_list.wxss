/* pages/ls_list/ls_list.wxss */
page{
  background: #f6f6f6;
}
.container{
  padding-top: 98rpx;
  background: #f6f6f6;
}
.index_scroll{
	width: 750rpx;
	white-space: nowrap;
	height: 98rpx;
	/* border-bottom: 1px solid #EEEEEE; */
	padding: 0 15rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 999;
  box-shadow:0px 2px 6px 0px rgba(206,198,198,0.5);
}
.index_tab{
  display: inline-flex;
	white-space:nowrap;
	font-size: 34rpx!important;
	justify-content: center;
  padding: 30rpx 0;
  margin: 0 15rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	line-height: 1!important;
  color: #666666;
}
.icur{
  color: #222;
  border-bottom: 2px solid #3879D1;
}
.hx20{
  width: 100%;
  height: 20rpx;
  background: #f6f6f6;
}
.ls_li{
  display: flex;
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
}
.lsimg{
  width:180rpx;
  height:144rpx;
  margin-right: 30rpx;
}
.lsimg image{
  width: 100%;
  height: 100%;
}
.ls_msg{
  flex:1;
  height:144rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.ls_name{
  color: #222;
  font-size: 34rpx;
}
.ls_add{
  font-size: 26rpx;
  color: #666;
}
.ls_add image{
  width: 26rpx;
  height: 27rpx;
}
.go_xq{
  width:150rpx;
  height:50rpx;
  background:rgba(209,56,56,1);
  border-radius:30rpx;
  font-size: 26rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}