/* pages/fenxiao/fenxiao.wxss */
page{
  background: #fff;
}
.container{
  padding-top: 98rpx;
  background: #fff;
}
.index_scroll{
	width: 750rpx;
	white-space: nowrap;
	height: 98rpx;
	/* border-bottom: 1px solid #EEEEEE; */
	padding: 0 15rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 999;
  box-shadow:0px 2px 6px 0px rgba(206,198,198,0.5);
}
.index_tab{
  height:73rpx;
  background:rgba(245,245,245,1);
  border-radius:37px;
  display: inline-flex;
	white-space:nowrap;
	font-size: 34rpx!important;
  align-items: center;
	justify-content: center;
  padding: 0 17rpx;
  margin: 0 15rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	line-height: 1!important;
  color: #222;
}
.icur{
  color: #fff;
  background: #3879D1;
}
/*fx_list*/
.fx_list{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.fx_li{
  display: flex;
  align-items: center;
  justify-content: center;
  width:335rpx;
  height:200rpx;
  background:rgba(245,245,245,1);
  border-radius:8px;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.fx_li image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1
}
.fx_li:nth-child(2n){
  margin-right: 0;
}
.fx_li_tit{
  width:4em;
  text-align: center;
  position: relative;
  z-index: 5
}