.zx_banner{
  width:100%;
  height:300rpx;
}
.zx_banner image{
  height: 300rpx;
}
.zx_li{
  width: 100%;
  height: 210rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.zx_img{
  width: 78rpx;
  height: 79rpx;
  margin-right: 40rpx;
}
.zx_img image{
  width: 100%;
  height: 100%;
}
.zx_msg{
  flex:1;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.zx_tit{
  font-size: 34rpx;
  color: #222;
  font-weight: bold;
}
.zx_inr{
  font-size: 26rpx;
  color: #666;
}